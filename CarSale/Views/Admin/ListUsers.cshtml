@model List<ReadUserDTO>
@{ 
    ViewData["Title"] = "List all users";
}
<div>
    <h2>All app users management</h2>
    @if (Model.Any())
    {
        @foreach (var user in Model)
        {
            <div class="card">
                <div class="card-header">
                   <h3>@user.Id</h3>
                </div>
                <div class="card-body">
                    @user.Email
                </div>
                <div class="card-footer">
                    <a asp-action="EditUser" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="DeleteUser" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-danger" onclick="return confirm('Are you sure')">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <div>No registered users at the moment</div>
    }
</div>