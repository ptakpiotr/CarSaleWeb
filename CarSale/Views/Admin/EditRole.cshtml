@model List<EditRoleModel>

@{ 
    ViewData["Title"] = $"Edit roles for user : {ViewData["UserID"]}";
}

<div>
    <form asp-action="EditRole" asp-controller="Admin" asp-route-id="@ViewData["UserID"]" method="post">
        @for(int i = 0; i < Model.Count; i++)
        {
            <div>
                <label>@Model[i].Name</label>
                <input asp-for="@Model[i].Chosen" />
            </div>
        }
        <div asp-validation-summary="All"></div>

        <input type="submit" value="Apply" class="btn btn-success" />
    </form>
</div>