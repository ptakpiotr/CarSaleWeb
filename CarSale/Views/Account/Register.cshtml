@model RegisterUserDTO

@{
    ViewData["Title"] = "Register new user";
}

<form asp-action="Register" asp-controller="Account" method="post">
    <div class="input-group-prepend">
        <label class="input-group-text mr-2" asp-for="Email"></label>
        <input class="form-control-sm" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="input-group-prepend">
        <label class="input-group-text mr-2" asp-for="City"></label>
        <input class="form-control-sm" asp-for="City" />
        <span asp-validation-for="City"></span>
    </div>
    <div class="input-group-prepend">
        <label class="input-group-text mr-2" asp-for="Password"></label>
        <input class="form-control-sm" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="input-group-prepend">
        <label class="input-group-text mr-2" asp-for="ConfirmedPassword"></label>
        <input class="form-control-sm" asp-for="ConfirmedPassword" />
        <span asp-validation-for="ConfirmedPassword"></span>
    </div>
    <div asp-validation-summary="All"></div>
    <input type="submit" value="Register" class="btn btn-success" />
</form>